#include <stdio.h>
#include <stdlib.h>
#include <unistd.h>
#include <string.h>
#include <sys/types.h>
#include <sys/socket.h>
#include <netinet/in.h>
#include <netdb.h>
#include <arpa/inet.h>

#define MSG_SIZE 150			// message size
typedef struct {
	int ID;
	char timestamp[10]; // Look at lab4 for formatting
	int LEDs[3]; // = {false, false, false};
	int buttons[5]; // = {false, false, false, false, false};
	char voltage[4]; //string because it was difficult to do a string to float conversion
	char *eventChange; //If an LED was turned on or off, which one? Same for buttons
} Data;

Data rtu[3]; //stores up to 3 rtu data
char buffer[MSG_SIZE]; // to store received messages or messages to be sent.
char* tokens;

void error(const char *);

int main(int argc, char *argv[]) {
	int sock, n;
	unsigned int length;
	struct sockaddr_in server, from;
	struct hostent *hp;
	char buffer[MSG_SIZE];
	char buffer2[MSG_SIZE];
	FILE *fp;

	//fp = fopen("Log.txt", "ab+"); //append starting time to name of file to distinguish between different logs

	strcpy(buffer, "MESSAGE");
	if (argc != 3) {
		printf("usage %s hostname port\n", argv[0]);
		exit(1);
	}

	sock = socket(AF_INET, SOCK_DGRAM, 0); // Creates socket. Connectionless.
	if (sock < 0)
		error("socket");

	server.sin_family = AF_INET; // symbol constant for Internet domain
	hp = gethostbyname(argv[1]); // converts hostname input (e.g. 10.3.52.15)
	if (hp == 0)
		error("Unknown host");

	bcopy((char *) hp->h_addr, (char *) &server.sin_addr, hp->h_length);
	server.sin_port = htons(atoi(argv[2])); // port field
	length = sizeof(struct sockaddr_in); // size of structure
	while (1) {
		fp = fopen("Log.txt", "ab+");
		//printf("Please enter the message: ");
		bzero(buffer2, MSG_SIZE); // sets all values to zero. memset() could be used

		n = sendto(sock, buffer, strlen(buffer), 0,
				(const struct sockaddr *) &server, length);

		// receive from server
		n = recvfrom(sock, buffer2, MSG_SIZE, 0, (struct sockaddr *) &from,
				&length);
		if (n < 0)
			error("recvfrom");

		//Parser needs to be put in a function
		tokens = strtok(buffer2, "|");
		rtu[1].ID = atoi(tokens);
		tokens = strtok(NULL, "|");
		strcpy(rtu[1].timestamp, tokens);
		tokens = strtok(NULL, "|");
		rtu[1].LEDs[0] = atoi(tokens);
		tokens = strtok(NULL, "|");
		rtu[1].LEDs[1] = atoi(tokens);
		tokens = strtok(NULL, "|");
		rtu[1].LEDs[2] = atoi(tokens);
		tokens = strtok(NULL, "|");
		rtu[1].buttons[0] = atoi(tokens);
		tokens = strtok(NULL, "|");
		rtu[1].buttons[1] = atoi(tokens);
		tokens = strtok(NULL, "|");
		rtu[1].buttons[2] = atoi(tokens);
		tokens = strtok(NULL, "|");
		rtu[1].buttons[3] = atoi(tokens);
		tokens = strtok(NULL, "|");
		rtu[1].buttons[4] = atoi(tokens);
		tokens = strtok(NULL, "|");
		strcpy(rtu[1].voltage, tokens);
		//End parser

		printf("ID: %d\n", rtu[1].ID);
		printf("Timestamp: %s\n", rtu[1].timestamp);
		printf("LED1: %d\n", rtu[1].LEDs[0]);
		printf("LED2: %d\n", rtu[1].LEDs[1]);
		printf("LED3: %d\n", rtu[1].LEDs[2]);
		printf("Button1: %d\n", rtu[1].buttons[0]);
		printf("Button2: %d\n", rtu[1].buttons[1]);
		printf("Button3: %d\n", rtu[1].buttons[2]);
		printf("Button4: %d\n", rtu[1].buttons[3]);
		printf("Button5: %d\n", rtu[1].buttons[4]);
		printf("Voltage: %s\n", rtu[1].voltage);

		fprintf(fp, "ID: %d\n", rtu[1].ID);
		fprintf(fp, "Timestamp: %s\n", rtu[1].timestamp);
		fprintf(fp, "LED1: %d\n", rtu[1].LEDs[0]);
		fprintf(fp, "LED2: %d\n", rtu[1].LEDs[1]);
		fprintf(fp, "LED3: %d\n", rtu[1].LEDs[2]);
		fprintf(fp, "Button1: %d\n", rtu[1].buttons[0]);
		fprintf(fp, "Button2: %d\n", rtu[1].buttons[1]);
		fprintf(fp, "Button3: %d\n", rtu[1].buttons[2]);
		fprintf(fp, "Button4: %d\n", rtu[1].buttons[3]);
		fprintf(fp, "Button5: %d\n", rtu[1].buttons[4]);
		fprintf(fp, "Voltage: %s\n", rtu[1].voltage);
		fprintf(fp, "\n");
		//printf("%s\n", buffer2);
		fclose(fp);
	}
	fclose(fp);
	close(sock); // close socket.
	return 0;
}

void error(const char *msg) {
	perror(msg);
	exit(0);
}

